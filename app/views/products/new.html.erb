<h1>Nouveau Produit</h1>

<%= form_for @product, url: products_path, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :title, "Titre du Produit" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Image du Produit" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description du Produit" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Prix du Produit" %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <%= f.submit "Créer le Produit", class: "btn btn-primary" %>
<% end %>

<%= link_to "Retour à la liste des produits", products_path, class: "btn btn-secondary" %>
